{
  "name": "node-api-ts",
  "version": "1.0.0",
  "description": "Curso node api",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"tsc -w\"  \"nodemon ./build/src/config/server/index.js\"",
    "start": "tsc && node ./build/src/config/server/index.js",
    "test": "mocha --exit",
    "coverage": "nyc mocha --exit"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.14",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.2.19",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/mocha": "^8.2.2",
    "@types/morgan": "^1.9.2",
    "chai": "^4.3.4",
    "concurrently": "^6.2.0",
    "mocha": "^9.0.1",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "ts-node": "^10.0.0",
    "ts-sinon": "^2.0.1",
    "typescript": "^4.3.4"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "recursive": true,
    "spec": "test/**"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "include": [
      "src/facade/**/*.ts",
      "src/facade/*.ts",
      "src/services/**/*.ts",
      "src/services/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "src/facade/index.ts",
      "src/facade/**/index.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
